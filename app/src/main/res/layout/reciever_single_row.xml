<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="300dp"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@drawable/reciever_background">

    <TextView
        android:id="@+id/reciever_single_row_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="290dp"
        android:text="loreme"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/reciever_single_row_time"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/reciever_single_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:49 PM"
        android:textColor="#BABABA"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>