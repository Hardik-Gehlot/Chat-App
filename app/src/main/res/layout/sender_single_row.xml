<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:padding="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/sender_background"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/sender_single_row_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="290dp"
            android:text="loreme"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/sender_single_row_linearLayout"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:id="@+id/sender_single_row_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/sender_single_row_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:49 PM"
                android:textColor="@color/grey"
                android:textSize="10sp" />
            <ImageView
                android:id="@+id/sender_single_row_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_send"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>